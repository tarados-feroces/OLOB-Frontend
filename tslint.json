{
    "extends": [
        "tslint:latest",
        "tslint-react",
        "tslint-eslint-rules"
    ],
    "linterOptions": {
      "exclude": [
        "**/node_modules/**"
      ]
    },
    "rules": {
        "align": [ true, "parameters", "statements", "members", "elements" ],
        "array-bracket-spacing": true,
        "array-type": [ true, "array-simple" ],
        "arrow-parens": true,
        "arrow-return-shorthand": true,
        "await-promise": true,
        "ban": false,
        "ban-comma-operator": true,
        "class-name": true,
        "comment-format": [ true, "check-space" ],
        "curly": true,
        "eofline": true,
        "forin": true,
        "indent": [ true, "spaces", 4 ],
        "interface-name": [true, "never-prefix"],
        "jsdoc-format": true,
        "jsx-equals-spacing": [ true, "newer" ],
        "jsx-no-lambda": false,
        "jsx-no-multiline-js": false,
        "jsx-no-string-ref": true,
        "jsx-self-close": true,
        "jsx-space-before-trailing-slash": true,
        "label-position": true,
        "import-spacing": true,
        "linebreak-style": [ true, "LF" ],
        "max-classes-per-file": [ true, 1 ],
        "max-line-length": [ true, 130 ],
        "member-access": true,
        "member-ordering": false,
        "new-parens": true,
        "newline-before-return": true,
        "no-any": true,
        "no-arg": true,
        "no-bitwise": false,
        "no-consecutive-blank-lines": [ true, 1 ],
        "no-console": true,
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-imports": true,
        "no-duplicate-super": true,
        "no-duplicate-switch-case": true,
        "no-duplicate-variable": true,
        "no-empty": [ true, "allow-empty-catch" ],
        "no-empty-interface": false,
        "no-eval": true,
        "no-floating-promises": true,
        "no-for-in-array": true,
        "no-implicit-dependencies": false,
        "no-invalid-template-strings": true,
        "no-irregular-whitespace": true,
        "no-parameter-reassignment": true,
        "no-redundant-jsdoc": false,
        "no-return-await": true,
        "no-shadowed-variable": true,
        "no-sparse-arrays": true,
        "no-string-literal": true,
        "no-string-throw": true,
        "no-submodule-imports": false,
        "no-switch-case-fall-through": true,
        "no-this-assignment": [ true, { "allow-destructuring": true } ],
        "no-trailing-whitespace": true,
        "no-unnecessary-class": [ true, "allow-static-only" ],
        "no-unsafe-finally": true,
        "no-unused-expression": true,
        "no-use-before-declare": true,
        "no-var-keyword": true,
        "no-var-requires": false,
        "object-curly-spacing": true,
        "object-literal-sort-keys": false,
        "one-line": [ true, "check-catch", "check-else", "check-open-brace", "check-whitespace" ],
        "ordered-imports": false,
        "prefer-for-of": false,
        "prefer-conditional-expression": false,
        "prefer-const": true,
        "prefer-method-signature": true,
        "quotemark": [ true, "single", "jsx-double" ],
        "radix": true,
        "restrict-plus-operands": true,
        "semicolon": [ true, "always" ],
        "switch-default": true,
        "switch-final-break": [ true, "always" ],
        "ter-indent": [ true, 4 ],
        "trailing-comma": [ true, { "multiline": "never", "singleline": "never" } ],
        "triple-equals": [ true, "allow-null-check" ],
        "typedef": [ true, "property-declaration" ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "use-isnan": true,
        "variable-name": [ true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case" ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-module",
            "check-operator",
            "check-separator",
            "check-type",
            "check-typecast",
            "check-type-operator"
        ]
    }
}
